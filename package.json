{
  "name": "ts-clsx",
  "type": "module",
  "version": "1.0.3",
  "packageManager": "pnpm@8.15.4",
  "description": "Rewrite clsx in TypeScript",
  "author": {
    "name": "mancuoj",
    "url": "https://github.com/mancuoj"
  },
  "license": "MIT",
  "homepage": "https://github.com/mancuoj/ts-clsx#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mancuoj/ts-clsx.git"
  },
  "bugs": "https://github.com/mancuoj/ts-clsx/issues",
  "keywords": [
    "ts",
    "clsx",
    "classnames",
    "react",
    "typescript",
    "utility",
    "tailwindcss",
    "css"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./lite": {
      "types": "./dist/index.d.ts",
      "import": "./dist/lite.mjs",
      "require": "./dist/lite.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "start": "esno src/index.ts",
    "lint": "eslint . && tsc",
    "test": "vitest",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm build",
    "release": "bumpp && pnpm publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.8.0",
    "@types/node": "^20.11.25",
    "bumpp": "^9.4.0",
    "eslint": "^8.57.0",
    "esno": "^4.0.0",
    "lint-staged": "^15.2.2",
    "simple-git-hooks": "^2.10.0",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vitest": "^1.3.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
